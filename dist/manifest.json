{
    "manifest_version": 3,
    "name": "Message Templater",
    "description": "Chrome Extension for sending template messages.",
    "version": "1.1.1",
    "action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ]
}
